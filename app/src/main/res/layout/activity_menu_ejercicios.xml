<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFE8E6"
    tools:context=".Menu_ejercicios">

    <TextView
        android:id="@+id/textView86"
        android:layout_width="286dp"
        android:layout_height="62dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:gravity="center_horizontal"
        android:text="@string/menu_ejer_titulo"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="363dp"
        android:layout_height="470dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="ejerdiarios"
                    app:srcCompat="@drawable/ping_saltando" />

                <TextView
                    android:id="@+id/textView91"
                    android:layout_width="108dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:onClick="ejerdiarios"
                    android:text="@string/menu_ejer_parte1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold"
                    app:fontFamily="casual" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="149dp"
                    android:layout_height="129dp"
                    android:layout_weight="1"
                    android:onClick="ejermed"
                    app:srcCompat="@drawable/meditar" />

                <TextView
                    android:id="@+id/textView88"
                    android:layout_width="190dp"
                    android:layout_height="131dp"
                    android:gravity="center_vertical"
                    android:onClick="ejermed"
                    android:text="@string/menu_ejer_parte2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="ejerestir"
                    app:srcCompat="@drawable/estirar" />

                <TextView
                    android:id="@+id/textView90"
                    android:layout_width="108dp"
                    android:layout_height="141dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:onClick="ejerestir"
                    android:text="@string/menu_ejer_parte4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold"
                    app:fontFamily="casual" />

            </LinearLayout>

            <Button
                android:id="@+id/button16"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/ovalo"
                android:onClick="Atras"
                android:text="@string/BtAtras" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>